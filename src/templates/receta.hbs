<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Receta</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x'
      crossorigin='anonymous'
    />

    <style>
      #pageHeader {
        position: relative;
      }

      .logo {
        width: 5%;
        position: absolute;
      }

      .logo2 {
        width: 13%;
        position: absolute;
        right: 0;
        top: 0;
      }

      .subtitle {
        font-size: 10px;
        margin: 0;
      }

      p {
        font-size: 11px;
      }

    </style>
  </head>

  <body>

    <div
      id='pageHeader'
      style="border-bottom: 1px solid #ddd"
    >
      <img
        class='logo'
        src='https://sg.com.mx/sites/default/files/2018-04/LogoITCelaya.png'
      />
      <h4 class='text-center title'>Instituto Tecnologico de Celaya</h4>
      <p class="text-muted text-center subtitle">Departamento Médico</p>
      <img
        class='logo2'
        src='https://sites.google.com/site/itcelayaibq/_/rsrc/1542846136389/home/tecnm.jpg'
      />
    </div>

    <div>
      <p><b>Medico</b>: {{medico.nombre}}</p>
    </div>
    <div>
      <p><b>Paciente</b>: {{paciente.nombre}}</p>
    </div>
    <div style="position: absolute; right: 0; top: 0;">
      <p><b>Cédula</b>: {{medico.cedula}}</p>
    </div>

    <p class="mt-3">Síntomas: {{sintomas}}</p>
    <p class="mb-0">Receta:</p>
    <p class="m-0">
      {{#each medicamentos}}
        {{medicamento.descripcion}}: {{receta}}<br>
      {{/each}}
    </p>


    <div style="position: absolute; left: 0; bottom: 0;">
      <p>Firma del profesional</p>
    </div>
    <div style="position: absolute; right: 0; bottom: 0;">
      <p>Fecha: {{fecha}}</p>
    </div>
    <hr style="width: 50%; position: absolute; bottom: 15px;">

  </body>

</html>
